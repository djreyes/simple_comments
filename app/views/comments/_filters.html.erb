<%= form_tag comments_path, method: "get", class: "input-prepend input-append" do %>
  <%= select_tag(:filter, options_for_select([ ["All", :all], ["Unhidden", :unhidden], ["Hidden", :hidden] ], params[:filter] ||= :all), class: "input-medium") %>

  
  <%= text_field_tag(:search_term) %>
  <%= submit_tag "Filter", class: "btn btn-primary" %>
<% end %>